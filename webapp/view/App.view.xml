<mvc:View controllerName="accmaker.controller.App" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m">
    <!-- xmln:tnt="sap.tnt" -->
    <!-- xmln:html="http://www.w3.org/1999/xhtml" -->
    <App>
        <pages>
            <Page title="{i18n>title}">
                <customHeader>
                    <OverflowToolbar class="headerBar" design="Transparent" style="Clear">
                        <Image class="statusBox" src="./images/status.svg">
                            <layoutData>
                                <OverflowToolbarLayoutData maxWidth="300px" shrinkable="true" priority="Disappear" />
                            </layoutData>
                        </Image>
                        <Image class="headerButtons" src="./images/Discord.svg">
                            <layoutData>
                                <OverflowToolbarLayoutData maxWidth="300px" shrinkable="true" priority="Disappear" />
                            </layoutData>
                        </Image>
                        <Image class="headerButtons" src="./images/Facebook.svg">
                            <layoutData>
                                <OverflowToolbarLayoutData maxWidth="300px" shrinkable="true" priority="Disappear" />
                            </layoutData>
                        </Image>
                        <Image class="headerButtons" src="./images/Wikipedia.svg">
                            <layoutData>
                                <OverflowToolbarLayoutData maxWidth="300px" shrinkable="true" priority="Disappear" />
                            </layoutData>
                        </Image>
                        <Image class="headerButtons" src="./images/Downloads.svg">
                            <layoutData>
                                <OverflowToolbarLayoutData maxWidth="300px" shrinkable="true" priority="Disappear" />
                            </layoutData>
                        </Image>
                        <Image class="headerButtons" src="./images/Forum.svg">
                            <layoutData>
                                <OverflowToolbarLayoutData maxWidth="300px" shrinkable="true" priority="Disappear" />
                            </layoutData>
                        </Image>
                    </OverflowToolbar>
                </customHeader>
                <content>
                    <VBox renderType="Bare" alignItems="Center">
                        <Image src="./images/Group.svg" class="leftCloud" />
                        <Image src="./images/Frame-9946.png" class="mainDBLImage" />
                        <Image src="./images/Group.svg" class="rightCloud" />
                    </VBox>
                    <IconTabHeader class="menu" mode="Inline">
                        <items>
                            <IconTabFilter icon="./images/News.svg" text="News" key="News" />
                            <IconTabFilter icon="./images/Highscores.svg" text="Media" key="Media" />
                            <IconTabFilter icon="./images/Help.svg" text="Help" key="Help" />
                            <IconTabFilter icon="./images/Rules.svg" text="Rules" key="Rules" />
                            <IconTabFilter icon="./images/Premium.svg" text="Premium" key="Premium" />
                            <IconTabFilter icon="./images/Account.svg" text="Account" key="Account" />
                        </items>
                    </IconTabHeader>
                </content>
            </Page>
        </pages>
    </App>
</mvc:View>
